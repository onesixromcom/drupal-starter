<div class="person-card-button text-center w-full h-full">

  <a href="{{ url }}" target="_blank" class="py-4 block object-fill w-full h-full place-items-center flex flex-row justify-center gap-2">
    <span class="person-card-button-icon text-gray-400 hover:text-gray-800">
      {{ _self.getIcon(button_type) }}
    </span>
    <span class="text-gray-700">
      {{ title }}
    </span>
  </a>

</div>
