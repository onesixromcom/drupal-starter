{% if button_type == 'email' %}
  {% set url = "mailto:" ~ info %}
  {% set title = 'Email'|t %}
{% elseif button_type == 'call' %}
  {% set url = "tel:" ~ info %}
  {% set title = 'Call'|t %}
{% elseif button_type == 'website' %}
  {% set url = info %}
  {% set title = 'Website'|t %}
{% endif %}

